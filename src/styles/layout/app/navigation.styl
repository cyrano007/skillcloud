.layout-navigation
  position absolute
  left 0
  top 0
  width 100%
  background-color rgba(0, 0, 0, 0.1)
  font-family Eau Douce,Helvetica Neue,Calibri,Emoji,sans-serif
  height $navigation-height
  z-index 3

  h1
    display inline
    line-height $navigation-height - 5px
    margin-left 0.5em
    a
      color #fff
      font-size 20px
      text-decoration none

  ul
    display inline-block
    line-height $navigation-height - 5px
    list-style none
    margin 0
    padding 0
    li
      display inline-block
      margin-left 1.45em
      a
        color #eee
        text-decoration none
        i
          margin-right 0.5em
