@import 'base/mixin'
@import 'base/setting'

.app
  position fixed
  top 0
  bottom 0
  left 0
  right 0

  & .navigation
    position absolute
    left 0
    top 0
    width 100%
    background-color rgba(0, 0, 0, 0.1)
    font-family Eau Douce,Helvetica Neue,Calibri,Emoji,sans-serif
    z-index 2
    padding 0.3em

    h1
      display inline
      line-height $navigation-height
      margin-left 0.5em
      a
        color #fff
        font-size 20px
        text-decoration none

    ul
      display inline-block
      list-style none
      margin 0
      padding 0
      li
        display inline-block
        margin-left 1.0em
        a
          color #eee
          text-decoration none

  & .content
    position fixed
    top 0
    left 0
    bottom 0
    right 0
    overflow scroll
    background-color rgba(36, 36, 36, 1)
    z-index 1

    & .space
      position absolute
      top 0
      right 0
      width 70%
      height 100%
      background-image url(../assets/background.jpg)
      background-repeat repeat
      z-index 0

    & .skillcloud
      position absolute
      top 0
      left 0
      right 0
      bottom 0
      background-color rgba(36, 36, 36, 1)
      z-index 1

      svg
        width 100%
        height 100%

        g
          cursor pointer

          circle
            r 5
            transition r 0.3s linear, opacity 0.3s linear

          text
            fill #fff

          &.active
            circle
              r 100
              opacity 0.2
            text
              text-anchor middle

            &.grandchild
              circle
                r 60

          &.root
            circle
              r 100
              opacity 0.3

        line
          stroke #fff
          stroke-width 1
          opacity 0.2

    & .tagcloud
      position absolute
      top 0
      left 0
      right 0
      bottom 0
      background-color rgba(36, 36, 36, 1)

      svg
        width 100%
        height 100%

        g
          cursor pointer
          user-select none

        circle
          fill-opacity .4
        text
          fill #fff
          font-size 12px

    & .chart
      position absolute
      right 0%
      top 3%
      width 30%
      height 50%
      background-color rgba(36, 36, 36, 0.2)
      opacity 0.8
      z-index 1

      svg
        width 100%
        height 100%

        g.nv-bar
          cursor pointer

        text
          fill #fff

    & .comment
      position absolute
      left 0
      bottom 0
      width 30%
      transition all 0.2s linear
      background-color rgba(36, 36, 36, 0.3)
      padding 1em
      color #fff
      z-index 1

      h3
        font-size 1.32em
        font-weight bold
        margin-top 0
        margin-bottom 0.5em
        padding-bottom 0.3em
        border-bottom 1px solid #ccc
        &:before
          content '‚óè'
          margin-right 0.25em

      p
        color: #fff
        line-height 1.8
        &:after
          content 'I'
          color #6f6
          font-weight bold
          animation blink 1s step-end infinite
