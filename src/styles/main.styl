@import 'base/mixin'
@import 'base/setting'

.app
  position fixed
  top 0
  bottom 0
  left 0
  right 0

  & .navigation
    position absolute
    left 0
    top 0
    width 100%
    height $navigation-height
    background-color #eee
    box-shadow 0px 3px 3px rgba(0,0,0,0.4)
    font-family Eau Douce,Helvetica Neue,Calibri,Emoji,sans-serif
    z-index 2

    h1
      display inline
      line-height $navigation-height
      margin-left 0.5em
      a
        color #666
        font-size 20px
        text-decoration none

    ul
      display inline-block
      list-style none
      margin 0
      padding 0
      li
        display inline-block
        margin-left 1.0em
        a
          color #666
          text-decoration none

  & .content
    position fixed
    top $navigation-height
    left 0
    bottom 0
    right 0
    overflow scroll
    z-index 1

    & .space
      position absolute
      top 0
      right 0
      width 70%
      height 100%
      background-image url(../assets/background.jpg)
      background-repeat repeat
      z-index 0

    & .cloud
      position absolute
      top 0
      right 0
      width 70%
      height 100%
      background-color rgba(0, 0, 0, 0.6)
      z-index 1

      svg
        width 100%
        height 100%

        g.node
          cursor pointer

          circle
            r 5
            transition r 0.3s linear, opacity 0.3s linear

          text
            fill #fff

          &.active
            circle
              r 100
              opacity 0.2

            &.grandchild
              circle
                r 60

          &.root
            circle
              r 100
              opacity 0.2

        line
          stroke #fff
          stroke-width 1
          opacity 0.2

    & .chart
      position absolute
      left 0%
      top 3%
      width 30%
      height 50%
      z-index 1
      background #fff

      svg
        width 100%
        height 100%

        g.nv-bar
          cursor pointer

    & .comment
      position absolute
      left 0
      bottom 0
      width 30%
      background-color #eee
      transition all 0.2s linear
      z-index 1
      p
        padding 1em

    & .babble
      position absolute
      top 0
      left 0
      right 0
      bottom 0
      background #fff

      svg
        width 100%
        height 200%

        circle
          fill-opacity .6

        .leaf circle
          fill #ff7f0e
          fill-opacity 1

        text
          font 10px sans-serif

    & .pack
      position absolute
      top 0
      left 0
      right 0
      bottom 0
      background #fff

      svg
        width 100%
        height 100%

        text
          font-size 11px
          pointer-events none

        text.parent
          fill #1f77b4

        circle
          fill #ccc
          stroke #999
          pointer-events all

        circle.parent
          fill #1f77b4
          fill-opacity .1
          stroke steelblue

        circle.parenthover
          stroke #ff7f0e
          stroke-width .5px

        circle.child
          pointer-events none

    & .force
      position absolute
      top 0
      left 0
      right 0
      bottom 0
      background #222

      svg
        width 100%
        height 100%

        g
          cursor pointer
          user-select none

        circle
          fill-opacity .4
        text
          fill #fff
          font-size 12px
