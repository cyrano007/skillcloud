@import 'base/mixin'
@import 'base/setting'

.app
  position fixed
  top 0
  bottom 0
  left 0
  right 0
  background-color rgba(36, 36, 36, 1)

  & .navigation
    position absolute
    left 0
    top 0
    width 100%
    background-color rgba(0, 0, 0, 0.1)
    font-family Eau Douce,Helvetica Neue,Calibri,Emoji,sans-serif
    height $navigation-height
    z-index 3

    h1
      display inline
      line-height $navigation-height - 5px
      margin-left 0.5em
      a
        color #fff
        font-size 20px
        text-decoration none

    ul
      display inline-block
      line-height $navigation-height - 5px
      list-style none
      margin 0
      padding 0
      li
        display inline-block
        margin-left 1.45em
        a
          color #eee
          text-decoration none
          i
            margin-right 0.5em

  & .background
    position absolute
    top -1000%
    left -1000%
    right -1000%
    bottom -1000%
    background-image url(../assets/background.png)
    background-repeat repeat
    opacity 0.06
    transition all 1.5s ease-out
    z-index -2

  & .crosshair
    z-index -1
    & .line
      position absolute
      background-color red
      transition all 0.5s ease-in-out
      &.vertical
        top 0
        left 50%
        width 1px
        height 100%
      &.horizontal
        top 50%
        left 0
        width 100%
        height 1px

  & .content
    position fixed
    top 0
    left 0
    bottom 0
    right 0
    overflow scroll
    z-index 2

    & .description
      position absolute
      top $navigation-height
      margin 1.2em
      color #999
      font-size 0.8em
      line-height 1.6
      z-index 2
      i
        font-size 1.2em
        margin-right: 0.2em
      p
        margin 0
        padding 0
      ul
        list-style none
        margin 0
        margin-top 1em
        padding 0
        li
          display inline-block
          margin-right 1em
          &:before
            content '\00bb'
            margin-right 0.5em
          a
            color #fff
            text-decoration none

    & .skillcloud
      position absolute
      top 0
      left 0
      right 0
      bottom 0
      z-index 1

      svg
        width 100%
        height 100%

        g
          cursor pointer

          circle
            r 5
            transition r 0.3s linear, opacity 0.3s linear

          text
            fill #fff

          &.active
            circle
              r 100
              opacity 0.2
            text
              text-anchor middle

            &.grandchild
              circle
                r 60

          &.root
            circle
              r 100
              opacity 0.3

        line
          stroke #fff
          stroke-width 1
          opacity 0.2

    & .tagcloud
      position absolute
      top 0
      left 0
      right 0
      bottom 0
      z-index 1

      svg
        width 100%
        height 100%

        g
          cursor pointer
          user-select none

        circle
          fill-opacity .4
        text
          fill #fff
          font-size 12px

    & .chart
      position absolute
      right 0%
      top 3%
      width 30%
      height 50%
      background-color rgba(36, 36, 36, 0.2)
      opacity 0.8
      z-index 1

      svg
        width 100%
        height 100%

        g.nv-bar
          cursor pointer

        text
          fill #fff

    & .comment
      position absolute
      left 0
      bottom 0
      width 30%
      transition all 0.2s linear
      background-color rgba(36, 36, 36, 0.3)
      margin 0.5em
      padding 1em
      color #fff
      z-index 1

      h3
        font-size 1.32em
        font-weight bold
        margin-top 0
        margin-bottom 0.5em
        padding-bottom 0.3em
        border-bottom 1px solid #ccc
        &:before
          content '‚óè'
          margin-right 0.25em

      p
        color: #fff
        line-height 1.8
        &:after
          content 'I'
          color #6f6
          font-weight bold
          animation blink 1s step-end infinite

  .copyright
    position fixed
    right 20px
    bottom 20px
    color #999
    font-size: 0.7em
    z-index 3
    i
      font-size 1.2em
      margin-right 0.2em
