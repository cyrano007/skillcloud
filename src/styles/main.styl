.app
  position fixed
  top 0
  bottom 0
  left 0
  right 0

  & > .cloud
    position absolute
    top 0
    right 0
    width 70%
    height 100%
    background-color #444

    svg
      width 100%
      height 100%

      g.node
        cursor pointer

        circle
          r 5
          transition r 0.3s linear, opacity 0.3s linear

        text
          fill #fff

        &.active
          circle
            r 100
            opacity 0.2

        &.root
          circle
            r 50
            opacity 0.2

      line
        stroke #fff
        stroke-width 1
        opacity 0.2

  & > .chart
    position absolute
    left 0
    top 0
    width 30%
    height 50%

    svg
      width 100%
      height 100%

  & > .comment
    position absolute
    left 0
    bottom 0
    width 30%
    background-color rgba(200, 200, 200, 0.6)
    transition all 0.2s linear
    p
      padding 1em
