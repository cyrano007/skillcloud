.module-cloudlink
  position relative
  margin-top 50px

  a
    display block
    text-align center
    padding 1.0em
    color #fff
    font-size 1.1em
    font-weight 300
    background-color #5a5
    border-radius 5px
    letter-spacing 1px
    transition 0.5s
    &:hover
      background-color #484

  &__background
    position fixed
    top -500%
    left -500%
    right -500%
    bottom -500%
    background-color #000
    transform scale(0)
    opacity 0
    z-index 10
