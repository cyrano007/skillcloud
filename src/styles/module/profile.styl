.module-profile
  position absolute
  top 45px
  left 500px
  right 30px
  bottom 20px
  color #ddd
  transform-origin 50% 50%
  transform scale(1)
  transition 0.2s


  &__position
    font-size 18px
    font-family $roman-font-family
    letter-spacing 1px
    line-height 1.5

  &__name
    font-size 64px
    line-height 1.4
    text-shadow 3px 3px 0px #000

  &__roman
    display inline-block
    width 265px
    letter-spacing 5px
    text-align center
    font-size 14px
    font-family $roman-font-family
    padding 0
    color #333
    font-weight bold
    background-color #eee

  &__avator
    display inline-block
    position absolute
    top -5px
    right 0
    border 1px solid #999
    margin 0
    padding 6px

    img
      max-width 145px
      vertical-align bottom
      image-grayscale(25%)

    p
      background-color #000
      font-size 0.8em
      color #fff
      text-align center
      margin 0
      padding 0.3em
      border-top 1px solid #999
      margin-top 5px


  &__link
    margin-top 20px

    ul
      list-style none
      margin 0
      padding 0
      li
        display inline-block
        margin-right 1.2em
        font-size 1.1em
        font-family $roman-font-family
        i
          margin-right 0.05em
          font-size 1.5em

  &__overview
    position absolute
    top 280px
    left 0

    p
      color #999
      margin-bottom 2em

    h4
      font-size 1.6em
      font-weight bold
      text-shadow 2px 2px 1px #000
      margin 0
      padding 0
      margin-bottom 0.5em

  &__forkme
    a
      position fixed
      top 20px
      right -110px
      width 300px
      padding 0.2em
      box-shadow 0px 2px 6px #000
      text-align center
      color #fff
      font-size 14px
      font-weight bold
      text-decoration none
      background-color #000
      transform rotate(45deg)
      transform-origin 50% 50%
      transition 0.3s
      &:hover
        background-color #900
      &:before, &:after
        content ""
        width 100%
        display block
        position absolute
        top 1px
        left 0
        height 1px
        background #fff
      &:after
        bottom 1px
        top auto

