.module-profile
  position absolute
  top 39px
  left 500px
  right 30px
  bottom 20px
  color #ddd


  &__position
    font-size 18px
    font-family $roman-font-family
    letter-spacing 1px
    line-height 1.5

  &__name
    font-size 64px
    line-height 1.4
    text-shadow 3px 3px 0px #000

  &__roman
    display inline-block
    width 265px
    letter-spacing 5px
    text-align center
    font-size 14px
    font-family $roman-font-family
    padding 0
    color #333
    font-weight bold
    background-color #eee

  &__avator
    display inline-block
    position absolute
    top 0
    right 0
    border 1px solid #999
    margin 0
    padding 6px

    img
      max-width 145px
      vertical-align bottom
      image-grayscale(25%)

    p
      background-color #000
      font-size 0.8em
      color #fff
      text-align center
      margin 0
      padding 0.3em

  &__link
    margin-top 20px

    ul
      list-style none
      margin 0
      padding 0
      li
        display inline-block
        margin-right 1.2em
        font-size 1.1em
        font-family $roman-font-family
        i
          margin-right 0.05em
          font-size 1.5em

  &__overview
    margin-top 80px

    p
      margin-bottom 2.2em
      color #999

    h4
      font-size 1.35em
      font-weight bold
      text-shadow 2px 2px 1px #000
      margin 0
      padding 0
      margin-bottom 0.2em
      &:before
        content 'ãƒ¼'
        font-weight normal
        margin-right 0.4em
        color #999
