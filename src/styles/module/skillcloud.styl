.module-skillcloud
  position absolute
  top 0
  left 0
  right 0
  bottom 0
  z-index 1

  svg
    width 100%
    height 100%

    g
      cursor pointer

      circle
        r 5
        transition r 0.39s linear, opacity 0.39s linear

      text
        fill #fff

      &.active
        circle
          r 100
          opacity 0.2
        text
          text-anchor middle

        &.grandchild
          circle
            r 60

      &.selected
        text
          fill yellow

      &.root
        circle
          r 100
          opacity 0.3

    line
      stroke #fff
      stroke-width 1
      opacity 0.2
